<div class="contents row">
  <div class = 'textbook-contents'>
    <h2 class = 'title'><%= @name %>先生が登録したテキスト</h2>
    <ul class= 'textbook-lists'>
    <% @my_textbooks.each do |my_textbook| %>
      <li class='list'>
        <%= link_to [:teachers, my_textbook] do %>
          <div class='textbook-img-content'>
            <%= image_tag my_textbook.image, class: "textbook-img" %>
          </div>
          <div class='textbook-info'>
            <h3 class='textbook-name'>
              <%= my_textbook.name %>
            </h3>
            <div class='textbook-pages'>
              <span><%= my_textbook.page %>ページ</span>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  </div>
</div>